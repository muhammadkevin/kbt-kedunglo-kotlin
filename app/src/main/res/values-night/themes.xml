<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KbtKedunglo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/windowColor</item>
    </style>

    <style name="button_primary">
        <item name="colorPrimary">@color/btColor</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@color/btColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="button_danger">
        <item name="colorPrimary">@color/btDangerColor</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@color/btDangerColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="menu_bottom" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/windowColor</item>
    </style>
</resources>